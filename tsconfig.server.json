{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Node.js + ESM mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "dist-server",
    "rootDir": ".",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Node.js specific */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "src/pages/api/stripe/create-checkout.ts",
    "src/pages/api/stripe/verify-session.ts",
    "src/lib/stripe-clients.ts",
    "src/lib/utils.ts"
  ],
  "exclude": [
    "src/components",
    "src/hooks", 
    "src/contexts",
    "src/integrations",
    "src/services",
    "src/**/__tests__",
    "src/test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}